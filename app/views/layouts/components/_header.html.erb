<header class="container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Plants on Rails</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Plants", plants_path, class: "nav-link" %>
        </li>
        <!-- Dropdown for Categories -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Categories
          </a>
           <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <% @categories.each do |category| %>
              <%= link_to category.name.capitalize, category_path(category), class: "dropdown-item" %>
            <% end %>
            </div>
        </li>
        <li>
          <%= link_to "About us", permalink_path(permalink: 'about'), class: "nav-link" %>
        </li>
      </ul>
    </div>
    <div>
    <%= render 'search/form' %>
    </div>
    <button class="btn btn-outline-success m-2" type="submit">Login</button>
  </nav>
</header>
</body>
</html>